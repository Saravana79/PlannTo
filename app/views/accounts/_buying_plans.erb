<script type="text/javascript">
  function deleteBuyingPlan(buying_plan_id){
    $.ajax(
    {
      url: "/preferences/delete_buying_plan",
      data: {
        id: buying_plan_id
      },
      type: "GET",
      dataType: "script",
      success: function( data )
