<% if @event_content.errors.any? %>
  $("#subContainerEvent div#article_errors").html("<%= raw errors_for(@event_content) %>");
  $("#subContainerEvent div#article_errors").show(300);
<% else %>
   $('div#subContainerEvent #notification').fadeIn('slow');
   setTimeout("$('div#subContainerEvent #notification').fadeOut('slow');", 4000);
   $("#article_errors").hide();
   $('#new_event_content')[0].reset();
   $("#newContentList").append('<%= escape_javascript(render_content_type(@event_content)) %>');
<% end %>
