    $("#<%=@sharefield1%>").hide();
    $("#<%=@sharefield1Label%>").text("Start Date:")
    $("#<%=@form_id%> #<%=@field1_id%>").replaceWith("<input id='<%=@field1_id%>' name='article_content[field1]' type='text' style='margin-left:5px;width:150px'/>");
    $("#<%=@form_id%> #<%=@field1_id%>").val('');

  }

