      <div class="title_header float_lft" id="<%=@sharefield2Label%>">End date :</div>
      <div class="float_lft">
        <%= f.text_field :field2, {:style=>"margin-left:5px;width:150px", :id => @field2_id}  %>
      </div>
    </div>
    <%if @article_content.new_record?%>
