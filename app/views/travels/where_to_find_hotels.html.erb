         #plannto_table{border:0px;font-family:'PT Sans', sans-serif;}
         #plannto_headertd {padding: 5px 10px 0px 0px;margin:0px;font-size:13px;color:#07ABE2;font-family: 'PT Sans', sans-serif;font-weight: 300;}
         #plannto_incol2{font-weight:bold;font-size:13px;text-align:center;vertical-align:middle;min-width:80px;color:black;background:white;}
         #plannto_inheadercol1{padding-left: 25px;font-weight:bold;font-size:13px;text-align:left;vertical-align:middle;background:#FAFAFA;font-family: Arvo, serif;}
         #plannto_inheadercol2{font-weight:bold;font-size:13px;text-align:center;vertical-align:middle;min-width:80px;color:black;background:#FAFAFA;font-family: Arvo, serif;}
         #prodname{font-family: Arvo, serif;font-size: 15px;font-weight:bold;}
         .plannto_selector{padding: 3px 12px;border: 1px solid #CCC;width: 100%;border-radius: 2px;font-size:14px;font-family:  'Roboto Slab',sans-serif;font-weight:500;margin-top:5px;}
         .shadetabs li.unselected a{ text-decoration: none; font-size:14px; color: #fff!important; text-decoration: none; padding:6px 15px; float:left; display:inline-block; margin:0; text-align:center;font-family: Arvo, serif; font-weight: 500;}
          #plannto_insidediv{padding:2px 0px 2px 0px;background: #EEE;}
         <% end %>
         </style>
        <table width="100%"  id="plannto_table" >
          <tbody style="border:0px;">
            <tr>
              <td id="plannto_headertd">

                <ul class="shadetabs">
                <% unless @show_price == "false" %>
                  <li class="selected">

                <a href="#" id="where_to_buy_items_a" onclick="<%= "PlannTo.wheretobuytabclick(this," + @moredetails+ ",'" + @items.map(&:id).join(",") + "')"%>"><%= @item.name %></a>
                  </li>
                <%end%>
                <%if @show_offer != "false" %>
               <li class="unselected">
                   <% related_ids = (@show_by_city == true ? @cities.map(&:id).join(",") : @items.map(&:id).join(",")) %>
                   <a href="#" id="product_offers" onclick="<%= "PlannTo.related_hotel_tab_click(this," + @moredetails+ ",'" + related_ids + "')"%>">Related Hotels</a>
                  </li>
                <%end%>
              </ul>

                <!--<span>Best Prices</span>-->

                <%if @moredetails == "true" %>
                    <!--

                    <div style="float:right;">
                        <span id="plannto_poweredby">Powered By</span>
                        <span id="plannto_logo">Plann<font id="plannto_logo1">To</font></span>
                    </div>
                  -->
                <%else%>

                <%end%>

              </td>
            </tr>
            <tr>
              <td style="padding:0;margin:0;" id="tabreplacement">
                <!-- main where to buy check ends here. -->
    <%end%>


    <%if @show_price != "false" %>
         <%if @path !="onchange"%>

                      <div id="plannto_insidediv">
                          <table id="plannto_intable" width="100%">
                            <thead style="border:0px;display:table-header-group;">
                              <tr id="plannto_intr">
                                <td colspan="5" id="plannto_intd" >
                                 <%if @items.size == 1 %>
                                 <div style="width:100%;">
                                 <span style="float:left;padding-left: 10px;padding-top: 5px;">

                                 <img  src="<%=@item.image_url(:medium)%>" alt="<%=@item.name%>"  onerror="this.error=null;this.src='<%=@item.base_item_image_url(:medium)%>';" style="width:60px;"/>

                                </span>
                                 <span style="padding-left:5px;padding-top:15px;float:left;" id="prodname">
                                   <%=@item.get_name%>
                                </span>
                                </div>
                                <%else%>
                                <%=select_tag "w_t_b_items",
                                options_for_select(@items.map{|i|[i.name,i.id]}),:onchange=>"PlannTo.onchange_function(this," + @moredetails+ ")",:class=>"plannto_selector" %>
                                <%end%>
                              </td>
                            </tr>
                          </thead>
                          <tbody style="border:0px;" id="where_to_buy_items_onchange">
          <%end%>
                            <%unless @moredetails == "true"  %>
                            <tr id="plannto_inheadertr">
                              <td id="plannto_inheadercol1" width="35%">Seller</td>
                              <td id="plannto_inheadercol2"  width="35%">Price</td>
                              <td width="30%" id="plannto_inheadercol2" >Check Availability</td>
                            </tr>
                            <%else%>
                            <tr id="plannto_inheadertr">
                              <td id="plannto_inheadercol1" width="20%">Seller</td>
                              <td id="plannto_inheadercol2"  width="20%">Price</td>
                            <!--  <td id="plannto_inheadercol2"  width="25%">Shipping Time</td> -->
                              <td width="15%" id="plannto_inheadercol2" >Check Availability</td>
                            </tr>
                            <%end%>
                            <%count = 0%>
                            <% if (!@publisher.nil? && @publisher.id == 5) %>
                                     <% @gotext = "Buy Now" %>
                             <%else%>
                                      <% @gotext = "Avalability" %>
                             <% end %>

                            <% @where_to_buy_items.group_by(&:vendor_id).each do |vendor, items| %>
                                <% count = count + 1%>
                                <% unless count > @displaycount %>
                                  <%unless @moredetails == "true"  %>
                                      <tr id="plannto_intr">
                                      <%items.each_with_index do |item, index|%>
                                        <%if @display_item_details_val %>
                                          <%if index == 0%>
                                            <td id="plannto_incol1" width="35%"> <img class="imagevendor" src="<%= configatron.root_image_url + 'vendor' + '/medium/' + item.image_url%>" alt="<%=item.vendor.name%>"  style="width:75px;border:0;padding:0;"/> </td>
                                            <td id="plannto_incol2"  width="35%"> <%= item.price %> </td>
                                            <td width="30%" id="plannto_incol3" ><a href="<%= configatron.hostname %>/history_details?detail_id=<%=item.id%>&iid=<%=@impression_id%>" id="plannto_go_button" target="_blank"><%= @gotext%></a> </td>
                                          <%end%>
                                        <%end%>
                                      <%end%>
                                      </tr>
                                  <% else%>
                                    <tr id="plannto_intr">
                                       <%items.each_with_index do |item, index|%>
                                          <%if @display_item_details_val %>
                                            <%if index == 0%>
                                              <td id="plannto_incol1" width="20%"> <img class="imagevendor" src="<%= item.vendor.image_url%>" alt="<%=item.vendor.name%>"  style="width:85px;border:0;padding:0;"/> </td>
                                              <td id="plannto_incol2" width="20%"> <%= item.price %> </td>
                                              <!--
                                              <td id="plannto_incol2" width="20%"><%#=display_availability_detail(item)%></td> -->
                                             <!-- <td id="plannto_incol2" width="25%" style="font-weight:normal;"><%#=display_shipping_detail(item)%></td> -->
                                              <td width="15%" id="plannto_incol3"><a href="<%= configatron.hostname %>/history_details?detail_id=<%=item.id%>&iid=<%=@impression_id%>&type=Hotel" id="plannto_go_button" target="_blank"><%= @gotext%></a> </td>
                                            <%end%>
                                          <%end%>
                                        <%end%>
                                    </tr>
                                <% end %>
                              <% end %>
                            <% end %>

                            <% if count > @displaycount %>
                                <tr style="plannto_footertr">
                                  <%if @moredetails == "true"
                                    @wrapper="3"
                                  else
                                    @wrapper="2"
                                  end
                                  %>
                                  <td  id="plannto_footertd" colspan="<%=@wrapper%>">
                                    <span id="plannto_footerspan">
                                      <a href="<%= configatron.hostname %>/travels/external_page?item_id=<%=@item.id%>&iid=<%=@impression_id%>" id="plannto_footera" target="_blank">View prices from more retailers</a>
                                    </span>
                                  </td>
                                  <td id="plannto_incol3" width="15%">
                                    <span >
                                      <a href="<%= configatron.hostname %>/travels/external_page?item_id=<%=@item.id%>&iid=<%=@impression_id%>" id="plannto_go_button" target="_blank"> Go </a>
                                    </span>
                                  </td>
                                </tr>
                            <% end %>
                      <%if @path!="onchange"%>
                                        </tbody>
                                      </table>
                                    <div>
                      <%end%>

                    <%else%>
                    <!-- else for only showing offers -->
                      <%= render "products/product_offers_details" %>
                    <%end%>
                      <%if @path=="wheretobuymain"%>

                                    </td>
                                  </tr>
                                </div>
                              </tbody>
                            </table>
