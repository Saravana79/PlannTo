<div class="maincontainerCss" id="maincontainer"> 
<div id="tag_cloud">
    <h1><%= "All #{@type.capitalize} Related Topics" %>  <%#= link_to "Send Report", contact_us_path(:type => "#{@type.capitalize}Topic"),:remote=> :true %></h1>
    <br/>
    <% @topic_cloud_hash.each_pair do |topic,size| %>
      <div class="cloud_element" >
      	<span style="height:40px;">
      	<%topic_object = Item.find(topic[0]) %> 
        <%= content_tag(:a, topic_object.name, { :href => "#{topic_object.get_url()}", :title => "#{topic_object.contents.count} contents", :style => "font-size:#{size}px;" }) %>
    	</span>
      </div>
    <%end%>
  </div>
 <div style="clear:both;display:block;width:400px;padding-top:10px;" ></div>
</div>


