 <% if (!@where_to_buy_items.blank?) %>
 <div id="where_to_by_items" item="<%= @item.id %>"></div>
 <table width="251" height="38" border="0" cellspacing="0" cellpadding="0px" style="border:solid 1px #cdd3d7;background:white;">
    <tr>
      <td class="bg_widgethdr txt_white">Best Prices</td>
    </tr>
    <tr>
            <td>
              <div style="padding:10px;">
                <table>     
                  <%count = 0%>      
                  <% @where_to_buy_items.group_by(&:site).each do |site, items| %> 
                        <% count = count + 1%>
                         <% unless count > 4 %>
                                <tr>
                               <%items.each_with_index do |item, index|%>      
                                <%if display_item_details(item)%>
                               <%if index == 0%>
                                 <td style="width:100px;height:30px;"> <img class="imagevendor" src="<%= configatron.root_image_url + 'vendor' + '/medium/' + item.image_url%>" alt="<%=item.vendor_name%>"  style="width:75px;"/> </td>
                                 <td style="font-weight:bold;width:90px;"> <%=display_price_detail(item)%> </td>
                                 <td><a  rel="nofollow" href="/history_details?detail_id=<%=item.item_details_id%>" class="btn-link" target="_blank">Go</a> </td>
                                <%end%>
                                <%end%>
                                <%end%>
                              </tr>
                          <%end%>
                        <% end %>
                          </table>
          </div>
            </td>
               </tr>
          
         <tr> <td style="text-align: center;padding-bottom: 10px;"> <%= link_to(" See more prices", "#where_to_buy", :class => 'bluelink-12', :id => "more_price") %></td></tr>
     </table>
      
      <%end %>
   <script>
     $("#more_price").click(function(e){
     $("#overview").hide();
     $("#where_to_buy").show();
     $("#all_variants").hide();
     $("#specification").hide(); 
     $("ul#Newtabs").find("li").removeClass("tab_active");
     $("ul#Newtabs li#buy").addClass("tab_active");
   })
    </script>
