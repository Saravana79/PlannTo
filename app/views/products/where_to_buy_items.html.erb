 <% if (!@where_to_buy_items.empty?) %> 
 
 <style type="text/css">
 #plannto_headertd {padding: 5px 10px 0px 12px;margin:0px;font: bold 14px Arial;color: #129FBD;}
 #plannto_table{background:#EEE;border:0px;}
 #plannto_poweredby{font:bold 11px Arial;color: #C7C6C6;padding-right: 5px;}
 #plannto_logo{padding: 2px 10px 2px 10px;font: bold 16px Arial;color: white;background: #292929;}
 #plannto_logo1{color: #129FBD;}
 #plannto_insidediv{padding:10px;background: #EEE;}
 #plannto_intable{background: #FFF;border-collapse:collapse;border:0;}
 #plannto_intr{border-bottom: 1px solid #EEE;height: 40px;background:white;}
 #plannto_intd{font-weight: 700;font-size:12px;font-family: Arial;color:black;padding-left:5px;padding-right:10px;vertical-align:middle;}
 .plannto_selector{padding: 3px 12px;border: 1px solid #CCC;width: 100%;border-radius: 2px;font-weight: 700;font-size:12px;}
 #plannto_incol1{padding-left: 15px;text-align:left;vertical-align:middle;}
 #plannto_incol2{font-weight:bold;font-size:13px;font-family: Arial;text-align:right;vertical-align:middle;min-width:80px;color:black;}
 #plannto_incol3{padding-right:10px;text-align:right;vertical-align:middle;}
 #plannto_go_button{margin: 0; background: #12C1E6;  color: #FFF!important;  padding: 5px 8px;  border: 0;  font-size: 12px;font-weight: bold; text-decoration: none;}
 #plannto_footertd{padding-right:10px;vertical-align:middle;height:40px}
 #plannto_footertr{background:white;}
 #plannto_footerspan{float:left;padding-left:20px}
 #plannto_footera{font-weight:bold;font-size:13px;font-family: Arial;text-decoration: underline;color:#535353;}
 </style>
<%if @onchange!="true" %>
 <table width="100%"  id="plannto_table" >
  <tbody style="border:0px;">
    <tr>
      <td id="plannto_headertd">
        <span>Best Prices</span>
        <%if @moredetails == "true" %>
        <div style="float:right;">
            <span id="plannto_poweredby">Powered By</span>
            <span id="plannto_logo">Plann<font id="plannto_logo1">To</font></span>
        </div>
        <%else%>
       
        <%end%>
      
      </td>
    </tr>
    <tr>
          <td style="padding:0;margin:0;">
              <div id="plannto_insidediv">
                <table id="plannto_intable" width="100%">   
                  <thead style="border:0px;">
                  <tr id="plannto_intr">
                    <td colspan="4" id="plannto_intd" >
                     <%if @items.size == 1 %>
                     <span style="padding-left:20px;">
                      <%=@item.get_name%>
                     </span>
                      <%else%>
                        <%=select_tag "w_t_b_items",
              options_for_select(@items.map{|i|[i.name,i.id]}),:onchange=>"PlannTo.onchange_function(this," + @moredetails+ ")",:class=>"plannto_selector" %>
                       <%end%>
                    </td>
                  </tr>
                </thead>
                  <tbody style="border:0px;" id="where_to_buy_items_onchange">
                  <%end%>
                         <%count = 0%>    
                  <% @where_to_buy_items.group_by(&:site).each do |site, items| %> 
                        <% count = count + 1%>
                         <% unless count > @displaycount %>
                          <%unless @moredetails == "true"  %>

                                <tr id="plannto_intr">
                               <%items.each_with_index do |item, index|%>      
                                <%if display_item_details(item)%>
                               <%if index == 0%>
                                 <td id="plannto_incol1" width="35%"> <img class="imagevendor" src="<%= configatron.root_image_url + 'vendor' + '/medium/' + item.image_url%>" alt="<%=item.vendor_name%>"  style="width:75px;border:0;padding:0;"/> </td>
                                 <td id="plannto_incol2"  width="35%"> <%=display_price_detail(item)%> </td>
                                 <td width="30%" id="plannto_incol3" ><a href="http://www.plannto.com/history_details?detail_id=<%=item.item_details_id%>&iid=<%=@impression_id%>" id="plannto_go_button" target="_blank">Go</a> </td>
                                <%end%>
                                <%end%>
                                <%end%>
                              </tr>
                        <% else%>
                            <tr id="plannto_intr">
                               <%items.each_with_index do |item, index|%>      
                                <%if display_item_details(item)%>
                               <%if index == 0%>
                                 <td id="plannto_incol1" width="25%"> <img class="imagevendor" src="<%= configatron.root_image_url + 'vendor' + '/medium/' + item.image_url%>" alt="<%=item.vendor_name%>"  style="width:75px;border:0;padding:0;"/> </td>
                                 <td id="plannto_incol2" width="30%"> <%=display_price_detail(item)%> </td>
                                 <td id="plannto_incol2" width="30%"><%=display_shipping_detail(item)%></td>
                                 <td width="15%" id="plannto_incol3"><a href="http://www.plannto.com/history_details?detail_id=<%=item.item_details_id%>&iid=<%=@impression_id%>" id="plannto_go_button" target="_blank">Go</a> </td>
                                <%end%>
                                <%end%>
                                <%end%>
                              </tr>
                        <% end %>      
                        <% end %>   
                        <% end %>
                        <% if count > @displaycount %>
                            <tr style="plannto_footertr">
                                  <td  id="plannto_footertd" colspan="4">
                                    <span id="plannto_footerspan">
                                      <a href="http://www.plannto.com/external_page?item_id=<%=@item.id%>&iid=<%=@impression_id%>" id="plannto_footera" target="_blank">View prices from more retailers</a>
                                    </span>
                                    <span style="float:right;">
                                    <a href="http://www.plannto.com/external_page?item_id=<%=@item.id%>&iid=<%=@impression_id%>" id="plannto_go_button" target="_blank">Go</a> 
                                    </span>
        </td>
                            </tr>
                   
                        <% end %>
                         <%if @onchange!="true"%>
                      </tbody>
                          </table>
          
            </td>
               </tr>
               </div>
</tbody>          
     </table>
      <%end%>
      <%end %>
  
