<div class="advt-block">
  <div class="advt-728">

    <% if @item_details.count != 0 %>
  <div>
    
        <% @item_details.each_with_index do |item_detail, indx| %>
            <% vendor_detail = get_vendor_detail(item_detail.site.to_i) %>
                  <% ad_url = get_ad_url(item_detail.id, @impression_id, @ref_url, @sid, params[:ads_id], params, item_detail) %>
                  <% shop_now_url = get_general_click_url(item_detail.url) %>


            <div class="item_details" id="item_detail_<%= indx + 1 %>">
              <div class="advt-box">
                <div class="logo"><a class="vendor_image" href="javascript:void(0)" target="_blank"><img src="<%= @vendor_image_url %>" alt=""></a></div>

                <div class="product-container">
                  <div style="float:left;width:200px;">
                  <a href="<%= shop_now_url %>" target="_blank" class="">
                    <div style="float:left;">
                    <h3 class="product-title"><%= item_detail.deal_title.to_s.truncate(57) %></h3>
                  </div>
                    <div style="float:left;">
                      <% if !item_detail.list_price.blank? && item_detail.list_price.to_i != 0 %>
                          <p class="price-strike"><%= prettify_mrpprice_widget(item_detail.list_price) %></p>
                      <% end %>
                        <p class="price"><%= prettify_mrpprice_widget(item_detail.deal_price) %></p>
                    </div>
                  </a>
                  </div>  
                  <div class="product-img">
                    <a href="<%= shop_now_url %>" target="_blank" style="text-decoration:none;">
                       <span style="  display: inline-block;height: 100%;vertical-align: middle;"></span>
                    <%= get_image_tag_using_src(item_detail.image_url.to_s, '', '82').html_safe %>
                      <!-- <img src="<%#= item_detail.item.image_url %>" alt="" height="82px"> -->
                    </a>
                  </div>
                  <div class="product-desc">
                    <a href="<%= shop_now_url %>" target="_blank" class="">
                      <p class="text-desc">
                       <p style="padding: 3px 0px;font-size:11px;"><%= get_expire_time_from_deal_item(item_detail) == "" ? "" : "#{get_expire_time_from_deal_item(item_detail)}"%></p>                      </p>
                      
                    </a>
                  </div>
                </div>

                <div class="right-div">
                  <p class="btn">
                    <a href="<%= shop_now_url %>" target="_blank" class="shop-now">
                      Shop Now
                    </a>
                  </p>
                </div>
              </div>
              <img class="vendor_image_src" src="<%= vendor_detail.full_imageurl %>" alt="" style="display: none;">
            </div>
        <% end %>

   
       </div>
        <div id="pager2" class="pager">
          <% if @item_details.count > 1 %>
          <% [*1..@item_details.count].each do |each_loop| %>
              <a href="javascript:void(0)" id="<%= each_loop %>" class=""><span> <%= each_loop %></span></a>
          <% end %>
          <% end %>
        </div>

  <% else %>
        No Product Found
    <% end %>
  </div>
  <!-- end of advt-300 -->
</div><!-- end of advt-block -->

