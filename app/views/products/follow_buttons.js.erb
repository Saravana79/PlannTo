
<%if !@item.nil? %>
$("#follow_buttons_js").html('<%= escape_javascript(render 'shared/product_button_javascript', :button_class => '', :item => @item, :related_follower => user_follow_type(@item, current_user), :related_items => false ) %>');
<%elsif !@items.nil? %>
 <%@items.each do |item| %>
   $("#follow_buttons_js_<%= item.id %>").html('<%= escape_javascript(render 'shared/product_button_javascript', :button_class => '', :item => item, :related_follower => user_follow_type(item, current_user), :related_items => false ) %>');
 
<%end%>
<%end%>
  
