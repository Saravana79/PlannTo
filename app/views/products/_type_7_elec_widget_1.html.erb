<style type="text/css">

    .shadetabs {
        padding: 0;
        margin: 0;
        width: 100%;
        list-style-type: none;
        text-align: left;
        z-index: -1;
    }

    .shadetabs li.unselected {
        float: left;
        padding: 0px !important;
        margin: 0 0 0 2px !important;
        background: #E65E7B !important;
        list-style-type: none !important;
        width: 49.2%;
        text-align: center;
        border-bottom: 2px solid #D2D2D2;
    }

    .shadetabs li.unselected a {
        text-decoration: none;
        font-size: 14px;
        color: #fff !important;
        text-decoration: none;
        padding: 6px 15px;
        display: inline-block;
        margin: 0;
        text-align: center;
    }

    .shadetabs li.selected {
        padding: 0px !important;
        margin: 0px !important;
        text-align: center;
        background: <%= @vendor_detail.theme_colour %> !important;
        list-style-type: none !important;
        text-align: center;
        text-transform: uppercase;
        border: 1px solid #929292 !important;
        font-weight: 700;
    }

    .shadetabs li.selected a {
        color: black !important;
        font-size: 14px;
        text-decoration: none;
        padding: 4px 15px;
        display: inline-block;
        margin: 0;
        text-align: center;
    }

 .btn{ margin:10px 0px; }
 .btn .shop-now{ margin:0; padding:0; width:105px; height:28px; cursor:pointer;  text-indent:-99999px; border:0;background: #F76300;padding: 5px 5px;color: #FFF;font-family: Arial;font-size:13px;}


</style>
<div id="planntobuy" style="border: 0px solid #E2E2E2;">
  <div>
    <div style="
    font-family: 'nexa_bold', arial;
            font-size: 16px;
            text-transform: uppercase;
            font-weight: bold;
            color: black;
            padding: 10px 0px 3px 0px;;
            margin-bottom: 0px;
            text-align: center;
            border-bottom: 5px solid #ffe327;
    "> Recommended Products
    </div>

  </div>
  <% @where_to_buy_items[0..3].each do |item_detail| %>
      <% vendor_detail = get_vendor_detail(item_detail.site.to_i) %>

      <div class="each_item_detail" style="padding: 3px 0px;  border-bottom: 1px solid #ECEAEA;cursor: pointer;">
        
        <span style="float:left;width:130px;">
           <p class="btn" style="margin:5px;">
               <img height="25px" class="ad_vendor_logo" id="vendor_logo" alt="" src="http://cdn1.plannto.com/items/vendor/medium/amazon.jpeg">
            </p>
         </span>
        
       <!--  <span style="float: left;padding-right: 2px;">
          <%= get_image_tag(item_detail, vendor_detail.vendor_name, item_detail.base_item_image_url(:small), 50, 0, "medium").html_safe %>
        </span> -->
        <span style="font-size: 13px;float: left;padding-right: 2px;width:50%;">
            <div style="font-size: 13px;color:black;font-family:'nexa_bold', arial;font-weight:bold;margin-top: 6px;" id="nametext">
              <%= item_detail.ItemName.to_s.truncate(34) %>
            </div>
        </span>
        <span style="font-size: 13px;float: left;padding-right: 2px;margin-top:10px;">
           
               <span class="btn">
                            <span rel="nofollow" target="_blank" class="shop-now" href="<%= configatron.hostname %>/history_details?iid=<%= @impression_id %>&detail_id=<%= item_detail.id %>">
                              <%= @vendor_detail.action_text.blank? ?  display_price_detail(item_detail)  : display_price_detail(item_detail) %>
                            </span>
               </span>
             
            
        </span>
       

        <br clear="all">
      </div>
  <% end %>
  <!--   <div height="20px;" style="height:20px;padding:2px;">
        <div style="text-align:center;" style="font-size:14px;margin-top:2px;">
          <span style="vertical-align:top;font-size:12px;"> Powered by </span><span><a rel="nofollow" href="http://www.plannto.com/history_details?red_url=http://www.junglee.com?tag=plannto-junglee-g-21" style="display:inline-block;margin-top:0px;height:14px" target="_blank"><img height="18px" class="ad_vendor_logo" id="vendor_logo" alt="" src="<%= get_vendor_image(@where_to_buy_items[0]) %>"></a></span>
        </div>
      </div> -->

</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery(".each_item_detail").live("click", function () {
            var shop_now_url = jQuery(this).find(".shop-now").attr('href')

            window.open(shop_now_url, "_blank")
            return false;
        })
    })
</script>