<div class="main_page">
  <%= form_tag "plannto_user_details", {:method => "get"} do %>
      Plannto User ID: <%= text_field_tag :pid %>
      <%= submit_tag "Go" %>
  <% end %>
</div>

<div class="results">
  <% if !@plannto_user_detail.blank? %>
      <div style="padding: 30px;">
        <table>
          <th>Key</th>
          <th>Value</th>
          <tbody>
          <% @plannto_user_detail.each do |key, val| %>
              <tr>
                <td><h3><%= key %></h3></td>
                <td>
                  <div class="1_inner_values">
                    <% if val.is_a?(Array) %>
                        <table border="1">
                          <th>Key</th>
                          <th>Value</th>
                          <tbody>
                          <% val.each do |each_val| %>

                          <% if each_val.is_a?(Hash) %>
                              <% each_val.each do |k, v| %>
                                  <tr>
                                    <td><%= k %></td>
                                    <td>
                                      <% if v.is_a?(Array) %>
                                          <% v.each do |each_item| %>
                                              <% if each_item.is_a?(Hash) %>
                                                  <table border="1">
                                                    <th>Key</th>
                                                    <th>Value</th>
                                                    <tbody>
                                                    <% each_item.each do |key, val| %>
                                                        <tr>
                                                          <td><%= key %></td>
                                                          <td><%= val %></td>
                                                        </tr>
                                                    <% end %>
                                                    </tbody>
                                                  </table>
                                              <% else %>
                                                <%= each_item %> <%= ", " %>
                                              <% end %>
                                          <% end %>
                                      <% else %>
                                          <%= v %>
                                      <% end %>
                                    </td>
                                  </tr>
                              <% end %>
                          <% else %>
                              <% each_val.each do |k, v| %>
                                  <tr>
                                    <td><%= k %></td>
                                    <td>
                                      <% if v.is_a?(Array) %>
                                          <% v.each do |each_v| %>
                                              <% if each_v.is_a?(Hash) %>
                                                  <table border="1">
                                                    <th>Key</th>
                                                    <th>Value</th>
                                                    <tbody>
                                                    <% each_v.each do |k, v| %>
                                                        <tr>
                                                          <td><%= k %></td>
                                                          <td><%= v %></td>
                                                        </tr>
                                                    <% end %>
                                                    </tbody>
                                                  </table>
                                              <% else %>
                                                  <%= v %>
                                              <% end %>
                                          <% end %>
                                      <% else %>
                                          <%= v %>
                                      <% end %>
                                    </td>
                                  </tr>
                              <% end %>
                          <% end %>


                          <% end %>
                          </tbody>
                        </table>
                    <% else %>
                        <%= val %>
                    <% end %>
                  </div>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  <% end %>
</div>

<div style="clear: both;"></div>

