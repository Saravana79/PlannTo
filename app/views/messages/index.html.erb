<script type="text/javascript">
  function reply_form(id){
    var form_id = id;
    $("#reply_form_"+form_id).show();
  };
  function cancel_reply_form(id){
    var form_id = id;
    $("#reply_form_"+form_id).hide();
    $("#message_to").text("");
    $("#message_body").text("");
  }

</script>
