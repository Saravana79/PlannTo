  <span class="Popuptitle"><center><h1><label class="signupin">Join Now</label></center>
    <% if @popup == "true" %>
        <a href="#" class="Closebut">&nbsp;</a>
    <% end %>
    </h1></span>


</div>

<!--popup heading bar-->


<!--poupmidder container-->
<div class="Popupmiddercontent">


  <!--content goes here-->

  <!--<div class="Popupfacebook">-->
  <!--<div class="FaceImg">-->
  <!--<%#= link_to image_tag('facebook_btn_signup.jpg'), user_omniauth_authorize_path(:facebook, :display=>"popup"), :class => "fbpopup" %>  -->
