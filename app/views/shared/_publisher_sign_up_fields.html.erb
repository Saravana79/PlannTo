  <!--<div class="PopupOr"><img alt="" src="/images/or_icon.png"></div>-->


  <div class="Popupinputblock">
    <!--<label>Name</label>-->
                <span class="Textinput">
                  <%= f.text_field :name, :size => "27", :placeholder => "Name", :class => "PopupinputblockNew" %>

                  </span>
  </div>

  <div class="Popupinputblock">
    <!--<label>Email</label>-->
                <span class="Textinput">
                  <%= f.text_field :email, :size => "27", :placeholder => "Email", :class => "PopupinputblockNew" %>

                  </span>
  </div>
  <div class="Popupinputblock">
    <!--<label>Password</label>-->
                <span class="Textinput">
                  <%= f.password_field :password, :size => "27", :placeholder => "Password", :class => "PopupinputblockNew" %>

                  </span>
  </div>
  <div class="Popupinputblock">
    <!--<label>Password Confirmation</label>-->
                <span class="Textinput">
                <%= f.password_field :password_confirmation, :size => "27", :placeholder => "Password Confirmation", :class => "PopupinputblockNew" %>

         </span>
  </div>

  <div class="Popupinputblock">
    <!--<label>Password Confirmation</label>-->
                <span class="Textinput">
                <%= text_field_tag :site_name, @publisher.name, :size => "27", :placeholder => "Gadgets To Use (Site Name)", :class => "PopupinputblockNew" %>

         </span>
  </div>

  <div class="Popupinputblock">
    <!--<label>Password Confirmation</label>-->
                <span class="Textinput">
                <%= text_field_tag :publisher_url, @publisher.publisher_url, :size => "27", :placeholder => "gadgetstouse.com (domain)", :class => "PopupinputblockNew" %>

         </span>
  </div>

  <div class="Popupinputblock">
    <!--<label>Password Confirmation</label>-->
                <span class="Textinput">
                <%= text_field_tag :contact_details, @publisher.contact_details, :size => "27", :placeholder => "xxxxx@gmail.com", :class => "PopupinputblockNew" %>

         </span>
  </div>


  <div class="Bluesubmit2" style="margin:5px 0px 0px 98px;"><%= f.submit "Sign Up" %> </div>

</div>
