<% if type == "report" %>
    <b><font color='green' style="padding:20px;">Please sign in.</font><br/> </b>
<% elsif type == "comment" %>
    <b><font color='green' style="padding:20px;">Please sign in to add comment.</font><br/> </b>
<% elsif type == "answer" %>
    <b><font color='green' style="padding:20px;">Please sign in to add answer.</font><br/> </b>
<% elsif type == "follow" %>
    <b><font color='green' style="padding:20px;">Please sign in to add
      this <%= @item.type.singularize.down rescue "" %> <%= @content.sub_type.singularize rescue "" %>  to your
      profile.</font><br/> </b>
<% elsif type == "invite" %>
    <b><font color='green' style="padding:20px;">Please sign in to invite friend.</font><br/> </b>
<% elsif type == "content" %>
    <b><font color='green' style="padding:20px;">Please sign in to add content.</font><br/> </b>
<% elsif type == "vote" %>
    <b><font color='green' style="padding:20px;">Please sign in to vote this content.</font><br/> </b>
<% elsif type == "recommendation" %>
    <b><font color='green' style="padding:20px;">Please sign in to add recommendation.</font><br/> </b>
<% elsif type == "content-follow" %>
    <b><font color='green' style="padding:20px;">Please sign in to follow
      this <%= @content.sub_type.singularize rescue "" %> </font><br/> </b>
<% elsif type == "login-devise" %>
    <div class="alert alert-block">
      <strong>Wrong Email or Password!! </strong>
    </div>
<% elsif type == "signup-devise" %>
    <div class="alert alert-block">
      <% @user.errors.full_messages.each do |msg| %>
          <strong><%= msg %>.</strong>
          <br/>
      <% end %>
      <% publisher.errors.full_messages.each do |msg| %>
          <strong><%= msg %>.</strong>
          <br/>
      <% end %>
    </div>
<% end %>


