<% if (related_follower && related_follower.follow_type == "Buyer") || (@type == "buy") %>
    Product.load_buyer('<%= "_"+item.id.to_s %>', '<%= button_class %>',
            '<%= I18n.t('plan_to_buy_selected') %>',
            '<%= I18n.t('plan_to_follow_selected') %>');
  Product.hover_follow_but($("#plan_to_buy"),'<%= I18n.t("buy_bnt") %>', '<%= I18n.t("unbuy_bnt") %>')
    Product.hover_follow_but($("#plan_to_follow"),'<%= I18n.t("follow_bnt") %>', '<%= I18n.t("unfollow_bnt") %>')
<% end %>
