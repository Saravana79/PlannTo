<div class="mainContentDiv">
  <%=render :partial => "votes/voting_detail", :locals => {:item => answer_content, :user => user_signed_in? ? current_user : nil}%>
  <div class="float_rgt">
    <img src="images/users.png" class="userImageSmall">
  </div>
  <div class="subContentDiv">
    <div><a class="title" href="google.com"><%= answer_content.title %></a></div>
    <div><a class="txt_brown"><%= answer_content.user.name unless answer_content.user.nil?   %> answered in <%= answer_content.question_content.items.first.name %> <%= time_ago_in_words(answer_content.created_at) unless answer_content.created_at.nil? %> </a></div>
    <div class="subContentGap"><%= raw get_content_description(answer_content)%></div>
    <ul class="divCommentsConent">
      <li class="subContentGap float_lft"><a class="txt_blue ">Comments (9) </a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue">Report</a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue ">Add Answer</a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue ">Delete This</a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue ">Update This</a></li>
    </ul>
  </div>
</div>