
<%if @type == "dealer" %>
  $("#dealer_report").html("<%= escape_javascript(render "reports/dealer",:type => @type,:reportable_object => @reportable_object,:report => @report) %>");
   $(".Closebut").click()
  $("#dealer_report").bPopup({
    closeClass:'Closebut',
    modalClose: false,
    position: [(screen.width / 2) - (520/2), $(window).scrollTop() + 120],
    follow: [false, false] //x, y
 });
 
 <%else%> 
    $("#contentEditView").html("");
  $("#contentEditView").html("<%= escape_javascript(render "reports/new",:type => @type,:reportable_object => @reportable_object,:report => @report) %>");
  $(".Closebut").click();
  $("#contentEditView").bPopup({
    closeClass:'Closebut',
    modalClose: false,
    position: [(screen.width / 2) - (520/2), $(window).scrollTop() + 120],
    follow: [false, false] //x, y
 });
 <%end%>

