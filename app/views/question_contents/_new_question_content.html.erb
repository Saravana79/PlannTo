<script  type="text/javascript" src="/javascripts/expanding.js"></script>
<div id="question_contentDiv" style="display:none;" class="contentSubContainer">

  <%if @content.nil?%>
    <%@form_id = "new_question_content"%>
    <%@title_id = "review_content_title"%>
  <%else%>
    <%@form_id = "edit_question_content_#{@content.id}"%>
    <%@title_id ="edit_question_content_#{@content.id}"%>
  <%end%>

  <%= form_for QuestionContent.new,:html => { :id => "#{@form_id}" }, :remote => true do |f| %>
  <%#= hidden_field_tag 'default_item_id', @item.try(:id) %>
    <%= f.hidden_field :itemtype_id, :value => @item.try(:itemtype_id) %>
    <%= f.hidden_field :sub_type %>
    <div id="notification" class="notificationStyle">Thank You, Question has been created.</div>
    <%if @content %>
     <div class="Close_dialog" style="display:none;width:43px; 
overflow:hidden;height:42px; background:url(../images/pclose_but.png) no-repeat left top;
position:relative; left:546px; text-indent:-9999px; top:-12px;" onclick="$('.ui-dialog-content').dialog('destroy')"></div>
 <span class="Popuptitle"><center> <h1>Edit <%=@content.type.underscore.humanize%></h1> </center></span>
 <%end%>
    <div style="padding:5px 5px 0px 0px;text-align:center">
      <div class="title_header float_lft">Title :</div>
      <div class="float_lft">
        <%= f.text_field :title, {:style=>"margin-left:5px;width:400px",:width=>"400px"}  %>
      </div>
    </div>
    <div style="padding:5px 5px 0px 0px;clear:both;" id="questionProducts">
      <div class="title_header float_lft">Product  :</div>
      <div class="taggingdiv" style="margin-left:5px;">
        <ul id="question_product_item_list" class="tagging"></ul>
        <div class="float_lft " style="clear:both;"><input style="margin-top:5px;width:250px" placeholder="Start Typing for suggestions.." type="text" value="" id="question_product_item"/></div>
        <div style="clear:both;"></div>
      </div>
      <div style="clear:both;"></div>
    </div>
    <script type="text/javascript">
  <%if @content.nil?%>
      $(document).ready(function(){
        settings={
          close:true, addButton: false,
          url: "/search/autocomplete_items",
          editMode: false, multiple: true,
          hidden_field: "question_content_item"
        };
        $.textTagger("question_product_item","question_product_item_list",settings);
    <% unless @item.blank? %>
          $.addTag("question_product_item","question_product_item_list", settings,"<%= @item.name %>", "<%= @item.id %>", false);
          $.addIdToField(settings.hidden_field, "<%= @item.id %>", false)
          $("ul#question_product_item_list li:first span a.icon_close_tagging").remove();
    <% end %>

  <%else%>
        settings={
          has_parent:true,
          close:true, addButton: false,
          url: "/search/autocomplete_items",
          editMode: false, multiple: true,
          hidden_field: "#contentEditView #question_content_item"
        };
    <% @items.each do |item| %>
          $.addTag("#contentEditView #question_product_item","div#contentEditView ul#question_product_item_list", settings,"<%= item.name %>", "<%= item.id %>", true);
          $.addIdToField(settings.hidden_field, "<%= item.id %>", true)
      <%if item.id == @item.id%>
            $("ul#question_product_item_list li#textTaggers<%=item.id%> span a.icon_close_tagging").remove();
      <%end%>
    <%end%>
        $.textTagger("#contentEditView #question_product_item","#contentEditView #question_product_item_list",settings);

  <%end%>
    });

    function validateQuestionForm(){
      $('form#<%=@form_id%> #question_content_title').poshytip('destroy')
      var valid = true;
      if ($("form#<%=@form_id%> #question_content_title").val() == ""){
        $('form#<%=@form_id%> #question_content_title').poshytip({
          className: 'tip-darkgray',
          content: 'Please select a title.',
          showOn: 'none',
          alignTo: 'target',
          alignX: 'right',
          offsetX: 5,
          alignY: 'center'
        });
        $('form#<%=@form_id%> #question_content_title').poshytip('show');
        valid = false

      }

      return valid
    }
    </script>

    <input id="question_content_item" name="question_item_id" type="hidden" value=<%= @item.id %>  />
    <div style="padding:5px 5px 0px 5px;">
      <div class="title_header float_lft">Description :</div>
      <div>
        <%= f.text_area :description, :class => 'textFilling expanding', :style=> 'width:400px;height:50px;' %>
      </div>
     <style>
       textarea, .textareaClone {
        min-height: 6em;
        width: 400px;
        max-height: <%= configatron.EXPANDING_TEXT_AREA_MAX_HEIGHT %>;
     }
   </style> 
    </div>
    <input id="question_content_item" name="item_id" type="hidden" value=<%= @item.id %>  />
    <div style="padding:0px 5px 5px 5px; float:right; width:100%; margin-right:40px; margin-top:20px ">
      <%= f.submit 'Save Question', :class => 'btn_submitanswer', :id => "publishQuestion" %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $("form#<%=@form_id%> #publishQuestion").click(function(e){
      var valid = validateQuestionForm();
      if (!valid){
        return false;
      }
      else{e.preventDefault()
<%if @content.nil?%>
          $.post('/question_contents/create',$("#<%=@form_id%>").serialize(),null, "script");
          return false;
<%else%>
          $.post('/question_contents/update/<%=@content.id%>',$("#<%=@form_id%>").serialize(),null, "script");
          return false;
<%end%>
        return false;
      }
    });
  });
</script>
