<% cache ['part-1', content] do %>
<div class="mainContentDiv" id="mainContentDiv<%=content.id%>">
  <%=render :partial => "votes/voting_detail", :locals => {:item => content, :user => user_signed_in? ? current_user : nil}%>
  <div class="float_rgt">
    <a href="<%= content.user.get_url()%>">  <img src="<%=content.user.get_photo%>" class="userImageSmall"/>   </a>

  </div>
  <div class="subContentDiv">
    <div><%= link_to content.title, content_path(content.id), :class => "title txt_onhover" %></div>
    <div><a class="txt_brown_bold" href="<%= content.user.get_url()%>"><%= content.user.name  %></a> <a class="txt_brown"> asked a question in <%=get_anchor_name_link(content)%> - <a class="txt_brown"> <%= pluralize(content.answer_contents.count, 'Answer')%> </a><a class="txt_brown"> - <%end%><%= time_ago_format(content) %><% cache ['part-2', content] do %> ago.</a> </div>
    
   
     
    <div class="subContentGap"><%= raw get_content_description(content)%></div>
    <ul class="divCommentsConent">
      <li class="subContentGap float_lft"><a class="txt_blue "><%= render_comments_anchor(content).html_safe  %></a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue"><%= link_to "Report",new_content_report_path(content,:type => "content"),:remote => true,:class => "txt_blue",:id => "report_link_#{content.id}" %></a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue "><%= link_to "Add Answer", content_path(content.id,:answer => "true" ),:id=> "answer",:class => "txt_blue"%></a></li>
      <%end%>
      <script>
        $("#report_link_<%= content.id %>").click(function(e){
          <%if !current_user %>
             
            $("#login-1 #click_message").html("<%= escape_javascript(render  '/shared/login_popup_message',:type => 'report')%>");
            openLoginPopup("#" + $(this).attr('id'), "click");
            return false
          <%end%>
        })
        </script>
        <script>
        $("#answer").click(function(e){
          <%if !current_user %>
            $("#login-1  #click_message").html("<%= escape_javascript(render  '/shared/login_popup_message',:type => 'answer')%>");
            openLoginPopup("#" + $(this).attr('id'), "click");
            return false
          <%end%>
        })
        </script>
      <%if content.can_update_content?(current_user)%>
        <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
        <li class="subContentGap float_lft"><%=link_to "Delete This",content, :remote => true, :confirm => "Are you sure you want to delete #{content.title}?", :method => :delete, :class => "txt_blue"%></li>
        <!--<li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
        <li class="subContentGap float_lft"><%#=link_to "Update This", edit_content_path(content, :item_id => "#{@item.try(:id)}"), :remote => true, :class => "txt_blue"%></li>
       --> <%= render :partial  => 'contents/guide', :locals => {:content => content} %>
      <%end%>
        <%if current_user.is_admin? %>
       <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
       <li class="subContentGap float_lft"><%= link_to "Add Votes",add_vote_admin_feed_path(content) ,:class =>"txt_blue "%></li>
     <%end%>  
    </ul>
  </div>
  <%=render :partial => "comments/new", :locals => { :content => content }  %>
</div>
