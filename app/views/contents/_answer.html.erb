<div class="mainContentDiv" id="mainContentDiv<%=content.id%>">
  <%=render :partial => "votes/voting_detail", :locals => {:item => content, :user => user_signed_in? ? current_user : nil}%>
  <% cache ['part-1', content] do %>
  <div class="float_rgt">
   <a href="<%= content.user.get_url()%>">  <img src="<%=content.user.get_photo%>" class="userImageSmall"/>   </a>
  </div>
  <div id="content_<%= content.id  %>" class="subContentDiv">


    <div>
      <%= link_to content.question_content.title, content_path(content.question_content.id), :class => "title txt_onhover" %>
      
    </div>
    <div><a class="txt_brown_bold" href="<%= content.user.get_url()%>"><%= content.user.name %></a><a class="txt_brown"> answered a question on </a><a class="txt_brown"><%=get_anchor_name_link(content.question_content)%></a> <a class="txt_brown">- <%end%><%= time_ago_format(content)%><% cache ['part-2', content] do %> ago </a></div>
    <div>
      
          <div class="subContentGap">
       <%= raw get_rating_or_category_contents(content)%>
       
          
        </div>
      <div class="subContentGap"><%= raw get_content_description(content)%></div>
    </div>

    <ul class="divCommentsConent dontfloat">
      <li class="subContentGap float_lft"><a class="txt_blue "><img src="/images/comment.jpg"/><%= render_comments_anchor(content).html_safe  %></a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue "><img src="/images/report.jpg"/><%= link_to "Report",new_content_report_path(content,:type => "content"),:remote => true,:class => "txt_blue" ,:id => "report_link_#{content.id}"%></a></li>
     <%end%>
		   <script>
         $("#report_link_<%= content.id %>").click(function(e){
          <%if !current_user %>
            openLoginPopup("#" + $(this).attr('id'), "click");
            return false
          <%end%>
         })
        </script>
      <%if content.can_update_content?(current_user)%>
      
       <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
        <li class="subContentGap float_lft"><img src="/images/delete.jpg"/><%=link_to " Delete This",answer_content_path(content), :remote => true, :confirm => "Are you sure you want to delete #{content.title}?", :method => :delete, :class => "txt_blue"%></li>
      <!--   <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
        <li class="subContentGap float_lft"><img src="/images/update.jpg"/><%#=link_to " Update This", edit_content_path(content, :item_id => "#{@item.try(:id)}"), :remote => true, :class => "txt_blue"%></li>
              
        -->  
        <%= render :partial  => 'contents/guide', :locals => {:content => content} %>
      <%end%>
    </ul>
  </div>
  <%=render :partial => "comments/new", :locals => { :content => content }  %>
</div>
