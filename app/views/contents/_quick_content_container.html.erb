<!--<h3>Quick content create</h3>-->
<br/>
<%count = (@article_categories.size - 1)%>
  <span class='quick_config_btns' >
	  <%=link_to  'Create Buying Plan'.html_safe ,new_preference_path(:search_type => "#{session[:itemtype]}",:search => "true"),:class => 'quick_config_btns_icon',:remote => :true %>     
  </span>
 <% @article_categories.each_with_index do |article_category, index| %>
    <%if index == 0%> 
      <span class="Usrdropdown1" style="padding-left:50px;">
         <span class="Usernamedp1"><a href="#">Create content</a><a class="downarrow"></a>
           <div class="Useraccountinfo1">
       <%end%> 
          <a data-content="<%=article_category[0]%>" class="quickCreate"><%=content_write_tab_label(article_category[0])%></a>
            <%if index == count %>
           </div>
         </span>
      </span> 
    <%end%>  
  <%end%>
 <% @article_categories.each_with_index do |article_category, index| %>
   <%if index == 0%> 
     <span class="Usrdropdown1" style="padding-left:50px;">
       <span class="Usernamedp1"><a href="#">Share content</a><a class="downarrow"></a>
         <div class="Useraccountinfo1">
    <%end%> 
      <a data-content="<%=article_category[0]%>" class="quickShare"><%=content_submit_tab_label(article_category[0])%></a>
       <%if index == count %>
      </div>
      </span>
     </span> 
    <%end%>  
   <%end%>
    <br/>
   <script type="text/javascript">
    $(function(){
      $('a.quickShare').click(function(e){
      <%if !current_user %>
         $("#login-1 #click_message").html("<%= escape_javascript(render  '/shared/login_popup_message',:type => 'content')%>");
         openLoginPopup("#" + $(this).attr('id'), "click");
        return false
      <%end%>    
      $(this).parent().toggleClass('selected');
      var category = $(this).data('content');
      $.ajaxSetup({
        'beforeSend':function(xhr){xhr.setRequestHeader("Accept","text/javascript")}
      });
	   $.ajax({url : '/contents/quick_new' , dataType:'script',type: "get",data: 'category=' +  category  + "&sharecontent=" + "true"  });
    return false
    });
    
    $('a.quickCreate').live("click",function(){
      <%if !current_user %>
        $("#login-1 #click_message").html("<%= escape_javascript(render  '/shared/login_popup_message',:type => 'content')%>");
        openLoginPopup("#" + $(this).attr('id'), "click");
        return false
      <%end%>  
