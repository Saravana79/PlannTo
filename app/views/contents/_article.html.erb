<div class="mainContentDiv" id="mainContentDiv<%=content.id%>">
  <%=render :partial => "votes/voting_detail", :locals => {:item => content, :user => user_signed_in? ? current_user : nil}%>
  <% cache ['part-1', content] do %>
  <div class="float_rgt">
   <a href="<%= content.user.get_url()%>">  <img src="<%=content.user.get_photo%>" class="userImageSmall"/>   </a>
  </div>
  <div id="content_<%= content.id  %>" class="subContentDiv">


    <div>
      <%= link_to content.title, content_path(content.id), :class => "title txt_onhover" %><%if content.sent_approval? %> <font color="black" style="font-style:italic">[Under Review] </font> <%end%>
        <%if content.sub_type == "Deals"  %>
           <%if content.deal_expired? %>
             <font color="black" style="font-style:italic">[This Deal is Expired.] </font>
           <%end%>
        <%end%>     
          
       <% if content.url?  %>
        - (<a class="txt_black_description txt_onhover" style="cursor: pointer; cursor: hand;" href="/external_contents/<%= content.id %>"><%=  URI.parse(URI.encode(URI.decode(content.url))).host.gsub("www.","") %> </a>)
       <%end%>
    </div>
    <div><a class="txt_brown_bold" href="<%= content.user.get_url()%>"><%= content.user.name %></a><a class="txt_brown"> shared a <%= content.sub_type.singularize %> on </a><a class="txt_brown"><%=get_anchor_name_link(content)%></a> <a class="txt_brown">- <%end%><%= time_ago_format(content)%><% cache ['part-2', content] do %> ago </a></div>
    <div class="contentsubsection">
      
      <%if content.thumbnail?%>
      <div style="float:left;width:80px;padding-right:10px;"><div><img src="<%= content.thumbnail %>" class="uploadedarticleContentdisplay float_lft"/></div></div>
        <div style="float:left;width:490px;">
    
      <%end%>
    
          <div class="subContentGap">
       <%= raw get_rating_or_category_contents(content,page)%>
       
            <% if content.sub_type == "#{ArticleCategory::REVIEWS}" %>
            <% rating =  (content.is_a?ArticleContent) ? content.field1 : content.rating %>
           <script type="text/javascript">
              $('div#content_show_<%= content.id%><%= page%>').raty({
              starOff:  'assets/star-off.png',
              starHalf   : 'assets/star-half.png',
              half       : true,
              readOnly   : true,
              starOn: 'assets/star-on.png',
              start: <%= "#{rating.to_f.round(1)}"%>
                  });
            </script>
            <%end%>
        <%= raw get_content_description(content)%>
        </div>
       <%if content.thumbnail?%> 
        </div>
        <%end%>
      
      <div class ="subContentGap" style="background-color:rgb(247, 247, 247);padding:10px;"><%= raw get_pro_con_verdict(content)%></div>
    
    </div>

    <ul class="divCommentsConent dontfloat">
      <li class="subContentGap float_lft"><a class="txt_blue " style="float:left;"><img src="/images/comment.jpg"/><%= render_comments_anchor(content).html_safe %></a></li>
      <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
      <li class="subContentGap float_lft"><a class="txt_blue " style="float:left;"><img src="/images/report.jpg"/><%= link_to "Report",new_content_report_path(content,:type => "content"),:remote => true,:class => "txt_blue" ,:id => "report_link_#{content.id}",:style=>"float:left;padding-left:5px;"%></a></li>
     <%end%>
		   <script>
		       
         $("#report_link_<%= content.id %>").click(function(e){
          <%if !current_user %>
            $("#login-1 #click_message").html("<%= escape_javascript(render  '/shared/login_popup_message',:type => 'report')%>");
            openLoginPopup("#" + $(this).attr('id'), "click");
            return false
          <%end%>
         })
        </script>
      <%if content.can_update_content?(current_user)%>
      
     
      <!--   <li class="subContentGap float_lft"><a class="txt_gray ">|</a></li>
        <li class="subContentGap float_lft"><img src="/images/update.jpg"/><%#=link_to " Update This", edit_content_path(content, :item_id => "#{@item.try(:id)}"), :remote => true, :class => "txt_blue"%></li>
              
        -->  
        <%= render :partial  => 'contents/guide', :locals => {:content => content} %>
      <%end%>
    <%= render :partial  => 'contents/others_action', :locals => {:content => content} %>
    </ul>
  </div>
    <%=render :partial => "comments/new", :locals => { :content => content }  %>
</div>
