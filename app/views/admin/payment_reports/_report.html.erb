<% if current_user.is_admin? %>
    <%= link_to "New Payment Report", new_admin_payment_report_path, :class => "btn_submitanswer" %>
<% end %>

<ul id="Newtabs" style="padding-top:15px;">
  <li  class="tab_active order" ><a href="javascript:void(0)"><span>Payment Reports</span></a></li>
</ul>
<%if @payment_reports.count > 0 %>

    <% if @start_date %> <h2> Payment Reports </h2> <% end %>
    <br/>
    <table border="0" width="100%" cellspacing="0" cellpadding="0">
      <tr>
        <th class="header_compare"  style="width:80px;"> Date </th>
        <th class="header_compare" width="80px"> Commission Amount</th>
        <th class="header_compare" width="80px"> Tax Amount</th>
        <th class="header_compare" width="80px"> Plannto Percentage</th>
        <th class="header_compare" width="80px"> Plannto Amount</th>
        <th class="header_compare" width="80px"> Final Amount</th>
        <th class="header_compare" width="80px"> Payment Method</th>

        <% if current_user.is_admin? %>
            <th class="header_compare" width="80px"> Publisher </th>
        <% end %>
        <th class="header_compare" colspan="3" width="80px"> Actions </th>
      </tr>
      <% @payment_reports.each do |p_report| %>
          <tr>
            <td class="bdb_gray1"  style="width:80px;text-align:center;border-bottom: 1px solid #808080;"><%=  p_report.payment_date.to_datetime.strftime("%d-%b-%Y" ) %> </td>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"><%= p_report.commission_amount %> </td>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;font-weight: bold;"><%= p_report.tax_amount %> </td>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;font-weight: bold;"><%= "#{p_report.plannto_percentage ? p_report.plannto_percentage : 0}  %" %> </td>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;font-weight: bold;"><%= p_report.plannto_amount ? p_report.plannto_amount : 0 %> </td>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"><%= p_report.final_amount %> </td>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"><%= p_report.payment_method %> </td>

            <% if current_user.is_admin? %>
                <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"><%= @publisher.publisher_url %> </td>
            <% end %>
            <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"> <%= link_to "Show", admin_payment_report_path(:id => p_report.id), :target => "_blank" %> </td>
            <% if current_user.is_admin? %>
                <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"> <%= link_to "Edit", edit_admin_payment_report_path(:id => p_report.id) %> </td>
                <td class="bdb_gray1" width="80px" style="text-align:center;border-bottom: 1px solid #808080;"> <%= link_to "Delete", admin_payment_report_path(:id => p_report.id), :method => :delete, :confirm => 'Are you sure you want to delete this?' %> </td>
            <% end %>
          </tr>
      <% end %>

    </table>

    <br/><br/>
    <%= will_paginate @payment_reports %>
<%end%>


<style type="text/css">
    .search_form {
        color: #A52A2A;
        font-size: 14px;
        margin: 30px;
        position: relative;
    }

    #report > a {
        font-size: 14px;
        margin-right: 47px;
    }
</style>