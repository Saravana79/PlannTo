
<center><h2>Report From <%= @start_date.to_date.strftime("%d-%m-%Y") %> To <%= @end_date.to_date.strftime("%d-%m-%Y") %></h2></center>
<br />

<h2> Summary </h2>

<br/>

<table border="0" width="100%" cellspacing="0" cellpadding="0">
<tr>
  <th class="header_compare"  > Total Clicks </th>
  </tr>
   <tr>
    <td class="bdb_gray1"  style="width:100px;text-align:center;border-bottom: 1px solid #808080;"> <%= @clickscount %> </td>
     
  </tr>

 </table> 

<br/><br/>
<%if @clickscount > 0 %>
 <h2> Clicks </h2> 
 <br/>
<table border="0" width="100%" cellspacing="0" cellpadding="0">
  <tr>
    <th class="header_compare" > Click Time </th>
    <th class="header_compare" > Hosted Page </th>
    <th class="header_compare" > Click Url </th>    
  </tr>
  <%@clicks.each do |c| %>
    <tr>
      <td class="bdb_gray1"  style="width:100px;text-align:center;border-bottom: 1px solid #808080;"><%= c.timestamp.to_datetime.strftime("%d-%b-%Y %I:%M %p" ) %> </td>
      <td class="bdb_gray1"  style="width:100px;text-align:center;border-bottom: 1px solid #808080;"><%= c.hosted_site_url %> </td>
      <td class="bdb_gray1"  style="width:100px;text-align:center;border-bottom: 1px solid #808080;"><%= c.click_url %> </td>      
    </tr>
  <%end%>
  </table>
  <br/><br/>
 <%= will_paginate @clicks %>
<%end%>

