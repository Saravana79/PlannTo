<div class="advt-block">
  <div class="advt-120">
    <% if @item_details.count != 0 %>
        <div class="logo"><a href="javascript:void(0)"><img src="<%= @vendor_image_url %>" alt=""></a></div>
        <div id="pager2" class="pager">
          <% [*1..@item_details.count].each do |each_loop| %>
              <a href="javascript:void(0)" id="<%= each_loop %>" class=""><span> <%= each_loop %></span></a>
          <% end %>
        </div>

        <% @item_details.each_with_index do |item_detail, indx| %>
            <div class="item_details" id="item_detail_<%= indx + 1 %>">
              <div class="advt-box">
                <div class="product-container">
                  <h3 class="product-title"><%= item_detail.ItemName %></h3>

                  <div class="product-img">
                    <a href="javascript:void(0)"><img src="<%= item_detail.item.image_url %>" alt="" width="100px" height="100px"></a>
                  </div>
                  <p class="product-desc">If you think a notebook this out of your price range, think again.</p>

                 <!-- <p class="price-strike">Rs. <%#= item_detail.price %></p> -->

                  <p class="price">Rs. <%= prettify(item_detail.price) %></p>

                  <p class="btn">
                    <% ad_url = configatron.hostname + history_details_path(:detail_id => item_detail.id, :iid => @impression_id, :ref_url => @ref_url) %>
                    <a href="<%= @click_url.blank? ? ad_url : (@click_url+ad_url) %>" target="_blank" class="shop-now">Shop
                      Now</a>
                  </p>
                </div>
                <div class="product-extra-desc"><p><%= item_detail.offer.blank? ? truncate_without_dot(@vendor_detail.default_text.to_s, 45) : truncate_without_dot(item_detail.offer.to_s, 45) %></p></div>
              </div>
            </div>
        <% end %>
    <% else %>
        No Product Found
    <% end %>

  </div>
  <!-- end of advt-120 -->
</div><!-- end of advt-block -->


<style type="text/css">
    .pager a {
        margin: 0px !important;
    }
</style>