<% ad_url = get_ad_url(item_detail.id, @impression_id, @ref_url) %>
<% shop_now_url = @click_url.blank? ? ad_url : (@click_url+ad_url) %>

<div class="product-container-new">
  <a href="<%= shop_now_url %>" target="_blank" class="">
    <h3 class="product-title-new"><%= item_detail.ItemName.to_s.truncate(57) %></h3>
    <p class="price"><%= prettify(item_detail) %></p>
  </a>


  <div class="product-img">
    <a href="<%= shop_now_url %>" target="_blank"><img src="<%= item_detail.item.image_url %>" alt="" width="100px" height="100px"></a>
  </div>


  <p class="btn">
    <a href="<%= shop_now_url %>" target="_blank" class="shop-now">Shop
      Now</a>
  </p>
</div>
<div class="product-extra-desc-new"><p>
  <%= raw get_offer_for_ad(@ad, item_detail, @vendor_ad_details[item_detail.site.to_i]['default_text'], 60, shop_now_url) %>
</p></div>


