    .advt-120 .advt-box .product-container-new {
        height: 420px;
        margin: 5px 0 0;
        padding: 5px;
    }
    .product-container-new a {
        text-decoration: none !important;
    }

    .advt-120 .advt-box .product-container-new h3 {
        color: #222;
        font-family: Arial;
        font-size: 15px;
        font-weight: bold;
        height: 60px;
        margin: 15px 0;
        padding: 0;
        text-align: center;
        word-break:break-word;
    }
    h3.product-title-new {
        word-break: break-all;
    }
    .advt-120 .advt-box .product-container-new .price {
        color: #bf0000;
        font-family: Arial monospace;
        font-size: 15px;
        font-weight: bold;
        margin: 10px 0;
        padding: 0;
        text-align: center;
    }
    .advt-120 .advt-box .product-container-new .product-img {
        margin: 0;
        padding: 30px 0;
        width: 112px;
    }
    .advt-120 .advt-box .product-container-new .product-img img {
        margin: 0 auto;
        text-align: center;
        width: 112px;
    }
    .advt-120 .advt-box .product-container-new .btn .shop-now {
        background: none repeat scroll 0 0 #f76300;
