<center><h2>List Of Advertisements </h2></center>
 <%=link_to "Create Advertisement",new_admin_advertisement_path, :class=>"btn btn-primary", :style=>'background:#16c3d7;' %> 
<br />
<table border="1" width="800px">
<tr>
  <th> Name </th>
  <th> Click Url</th>
  <th> Budget[Per day]</th>
  <th> Bid[CPM/CPC]</th>
  <th>Cost </th>
  <th>Advertisement Type</th>
  <th>Template Type</th>
  <th> Start Date</th>
  <th> End Date</th>
  <th> Products</th>
  <th>Edit</th>
  <th>Delete</th>
</tr>
 <%@advertisements.each do |ad | %>
   <tr>
     <td><%= ad.name  %> </td>
     <td><%= ad.click_url %> </td>
     <td> <%= ad.budget %> </td>
     <td> <%= ad.bid %> </td>
     <td> <%= ad.cost %>
     <td> <%= ad.advertisement_type %></td>
     <td> <%= ad.template_type %></td>
     <td> <%= ad.start_date.strftime("%d-%m-%Y") unless ad.start_date.blank? %></td>
     <td> <%= ad.end_date.strftime("%d-%m-%Y") unless ad.end_date.blank? %></td>
     <% collected_item_ids = ad.content.blank? ? "" : ad.content.related_items.collect(&:item_id).join(',') %>
     <td><% Item.where("id in ('#{collected_item_ids}')").each do |it| %>
     <%= it.name %>,&nbsp; <%end%></td>
     <td> <%= link_to "Edit",edit_admin_advertisement_path(ad) %> </td>
     <td> <%= link_to "Delete",[:admin,ad], :confirm => 'Are you sure?', :method => :delete %> </td>
  </tr>
<%end%>  
 </table> 
 <%= will_paginate @advertisements %> 
  
