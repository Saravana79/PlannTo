<% @sliced_item_details = @item_details.each_slice(02) %>

<div class="advt-block">
  <div class="advt-120">
    <% if @sliced_item_details.count != 0 %>
        <div class="logo"><a href="javascript:void(0)"><img src="<%= @vendor_image_url %>" alt="" width="97px" height="16px"></a></div>
        <div id="pager2" class="pager">
          <% [*1..@sliced_item_details.count].each do |each_loop| %>
              <a href="javascript:void(0)" id="<%= each_loop %>" class=""><span> <%= each_loop %></span></a>
          <% end %>
        </div>
        <div class="advt-box">
          <% @sliced_item_details.each_with_index do |sliced_item_detail, indx| %>
              <div class="item_details" id="item_detail_<%= indx + 1 %>">
              <% sliced_item_detail.each do |item_detail| %>
                  <div class="product-container">
                    <div class="product-img">
                      <a href="javascript:void(0)"><img src="<%= item_detail.item.image_url %>" alt="" width="100px" height="100px"></a>
                    </div>
                    <h3 class="product-title"><%= item_detail.ItemName %></h3>

                    <p class="product-desc">
                      <%= item_detail.offer.blank? ? truncate_without_dot(@vendor_detail.default_text.to_s, 45) : truncate_without_dot(item_detail.offer.to_s, 45) %>
                    </p>
                    <!--<p class="price-strike">Rs. 40, 000</p>-->
                    <p class="price">Rs. <%= item_detail.price %></p>

                    <p class="btn">
                      <a href="<%= history_details_path(:detail_id => item_detail.id, :iid => @impression_id, :ref_url => @ref_url) %>"  target="_blank" class="shop-now">Shop
                        Now</a>
                    </p>
                  </div>
              <% end %>
              <div class="product-extra-desc">
                <p> <%= truncate_without_dot(@vendor_detail.default_text.to_s, 25) %></p>
              </div>
              </div>
          <% end %>
        </div>
    <% else %>
        No Product Found
    <% end %>

  </div>
  <!-- end of advt-120 -->
</div><!-- end of advt-block -->


<style type="text/css">
    .pager a {
        margin: 0px !important;
    }
</style>