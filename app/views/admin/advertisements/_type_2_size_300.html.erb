<div class="advt-block">
  <div class="advt-300">
    <div class="logo"><a href="#"><img src="<%= @vendor_image_url %>" alt="" width="124px" height="20px"></a>
    </div>
    <% if @item_details.count != 0 %>
        <div class="list_carousel">
          <div id="pager2" class="pager">
            <% [*1..@sliced_item_details.count].each do |each_loop| %>
                <a href="javascript:void(0)" id="<%= each_loop %>" class=""><span> <%= each_loop %></span></a>
            <% end %>
          </div>
          <ul id="foo3">
            <% @sliced_item_details.each_with_index do |sliced_item_detail, indx| %>
                <li class="item_details" id="item_detail_<%= indx + 1 %>">
                  <% sliced_item_detail.each do |item_detail| %>
                      <div class="advt-box">
                        <div class="product-container">
                          <div class="product-img-left">
                            <a href="#"><img src="<%= item_detail.item.image_url %>" alt="" width="119px" height="89px"></a>
                          </div>
                          <div class="product-txt-right">
                            <h3><%= item_detail.ItemName %></h3>

                            <p class="product-desc">
                              <%= item_detail.offer.blank? ? truncate_without_dot(@vendor_detail.default_text.to_s, 50) : truncate_without_dot(item_detail.offer.to_s, 50) %>
                            </p>

                            <p class="price">Rs. <%= prettify(item_detail.price) %></p>

                            <p class="btn">
                              <% ad_url = configatron.hostname + history_details_path(:detail_id => item_detail.id, :iid => @impression_id, :ref_url => @ref_url) %>
                              <a href="<%= @click_url.blank? ? ad_url : (@click_url+ad_url) %>" target="_blank" class="shop-now">Shop
                                Now</a>
                            </p>
                          </div>
                        </div>
                      </div>
                  <% end %>
                </li>
            <% end %>
          </ul>
          <div class="clearfix"></div>
          <a id="prev3" class="prev" href="#">&lt;</a>
          <a id="next3" class="next" href="#">&gt;</a>

        </div>
    <% else %>
        No Product Found
    <% end %>

  </div>
  <!-- end of advt-300 -->
</div>
<!-- end of advt-block -->