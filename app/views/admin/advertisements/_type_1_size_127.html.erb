<% @sliced_item_details = @item_details.each_slice(02) %>

<div class="advt-block">
  <div class="advt-120">
    <% if @item_details.count != 0 %>
        <div class="logo"><a class="vendor_image" href="javascript:void(0)" target="_blank"><img src="<%= @vendor_image_url %>" alt="" width="" height=""></a></div>
        <div id="pager2" class="pager">
          <% [*1..@item_details.count].each do |each_loop| %>
              <a href="javascript:void(0)" id="<%= each_loop %>" class=""><span> <%= each_loop %></span></a>
          <% end %>
        </div>
        <div class="advt-box">
          <% @item_details.each_with_index do |item_detail, indx| %>
              <% ad_url = configatron.hostname + history_details_path(:detail_id => item_detail.id, :iid => @impression_id, :ref_url => @ref_url) %>

              <div class="item_details" id="item_detail_<%= indx + 1 %>">
                <%# sliced_item_detail.each do |item_detail| %>
                    <div class="product-container">
                      <div class="product-img">
                        <a href="<%= @click_url.blank? ? ad_url : (@click_url+ad_url) %>" target="_blank"><img src="<%= item_detail.item.image_url %>" alt="" width="100px" ></a>
                      </div>

                      <a href="<%= @click_url.blank? ? ad_url : (@click_url+ad_url) %>" target="_blank" class="">
                        <h3 class="product-title"><%= item_detail.ItemName %></h3>

                      <!--<p class="price-strike">Rs. 40, 000</p>-->
                        <p class="price"><%= prettify(item_detail.price) %></p>
                      </a>

                      <p class="btn">
                        <a href="<%= @click_url.blank? ? ad_url : (@click_url+ad_url) %>" target="_blank" class="shop-now">Shop
                          Now</a>
                      </p>
                    </div>
                <%# end %>
                <div class="product-extra-desc">
                           <p class="product-desc">
                             <%= truncate_without_dot(get_offer_for_ad(@ad, item_detail, @vendor_default_text), 45) %>
                      </p>
                </div>
              </div>
          <% end %>
        </div>
    <% else %>
        No Product Found
    <% end %>

  </div>
  <!-- end of advt-120 -->
</div><!-- end of advt-block -->


<style type="text/css">
    .pager a {
        margin: 0px !important;
    }

    .product-container a {text-decoration: none !important;}
</style>