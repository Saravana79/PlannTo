                s.remove();
            }
        }, "jsonp");
    </script>
<% end %>
<br/>
<br/>
</body>
</html>

<script>
    $("#All").click(function () {
        var all_val = $("#All").is(":checked")
        console.log(all_val == true)
        if (all_val == true)
            $(".show_list_options").prop("checked", true)
        else
            $(".show_list_options").prop("checked", false)
    })
</script>
