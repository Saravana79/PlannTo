    </script>
<% end %>

<% if params[:show_list].include?('ad-728') %>

    <div class="ad ad-3">
      <span>5) Ad-728</span>
      <span>URL => <%= "#{APP_URL}/advertisments/show_ads.json?item_id="+"#{params[:item_id]}"+"&ads_id="+"#{params[:ads_id]}"+"&size=728*90&more_vendors="+"#{params[:more_vendors]}"+"&ref_url="+"#{params[:ref_url]}"+"&ad_as_widget=true&is_test=#{params[:is_test]}"; %></span>
