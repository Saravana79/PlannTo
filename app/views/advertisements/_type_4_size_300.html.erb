<div class="advt-block">
  <div class="advt-300">
    <div class="logo"><a href="#"><img src="<%= @vendor_image_url %>" alt="" ></a>
    </div>
    <% if @item_details.count != 0 %>
        <div class="list_carousel">
          <div id="pager2" class="pager">
            <% [*1..@sliced_item_details.count].each do |each_loop| %>
                <a href="javascript:void(0)" id="<%= each_loop %>" class=""><span> <%= each_loop %></span></a>
            <% end %>
          </div>
          <ul id="foo3">
            <% @sliced_item_details.each_with_index do |sliced_item_detail, indx| %>
                <li class="item_details" id="item_detail_<%= indx + 1 %>">
                  <% sliced_item_detail.each do |item_detail| %>
                      <% ad_url = get_ad_url(item_detail.id, @impression_id, @ref_url, @sid, params[:ads_id], params) %>
                      <% shop_now_url = @click_url.blank? ? ad_url : (@click_url+ad_url) %>

                      <div class="advt-box">
                        <div class="product-container">
                          <div class="product-img-left">
                            <a href="#">
                              <%= get_image_tag(item_detail, vendor_ad_details[item_detail.site.to_s]['vendor_name'], @item.base_item_image_url(:medium), 112, 84).html_safe %>
                              <!-- <img src="<%#= get_image_url(item_detail, @vendor_ad_details[item_detail.site.to_i]['vendor_name']) %>" alt="" width="119px" height="89px"> -->
                            </a>
                          </div>
                          <div class="product-txt-right">
                            <h3><%= item_detail.ItemName %></h3>


                            <p class="price"><%= prettify(item_detail) %></p>

                            <p class="btn">
                              <a href="<%= shop_now_url %>" target="_blank" class="shop-now">Shop
                                Now</a>
                            </p>
                          </div>
                        </div>
                      </div>
                  <% end %>
                  <div class="product-txt-desc" style="border-top: 1px solid #D9D9D9;text-align: center;">
                    <p style="font-size: 12px;font-weight: 600;padding-top: 3px;">
                      <%#= truncate_without_dot(get_offer_for_ad(@ad, item_detail, @vendor_ad_details[item_detail.site.to_i]['default_text']), 90) %>
                      <%= raw get_offer_for_ad(@ad, @sliced_item_details.first.first, vendor_ad_details[@sliced_item_details.first.first.site.to_s]['default_text'], 50, "") %>
                    </p>
                  </div>
                  <img class="vendor_image_src" src="<%= vendor_ad_details[sliced_item_detail.first.site.to_s]['imageurl'] %>" alt="" style="display: none;">
                </li>
            <% end %>
          </ul>
          <!-- <div class="clearfix"></div>
           <a id="prev3" class="prev" href="#">&lt;</a>
           <a id="next3" class="next" href="#">&gt;</a>

         </div>-->
    <% else %>
        No Product Found
    <% end %>

    </div>
    <!-- end of advt-300 -->
  </div>
  </div>
  <!-- end of advt-block -->

  <style type="text/css">
      .shop-now {
          margin: 2px 0 0 !important;
      }
  </style>