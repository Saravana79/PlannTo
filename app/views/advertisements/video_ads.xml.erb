<VAST version="2.0">
<Ad>
<InLine>
<AdSystem version="4.11.1-2">Plannto</AdSystem>
<AdTitle>
 <![CDATA[Plannto Ads]]>
</AdTitle>
<Description>
 <![CDATA[ ]]>
</Description>
<Impression>
  <![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=all-impression&impression_id=<%= @impression_id %>]]>
</Impression>
<Creatives>

<% if !@video_click_url.blank? %>
<Creative sequence="1" id="331">
<Linear <% if @skippable == true %> skipoffset="<%= @skippable_time %>" <% end %>>
<Duration><%= @total_video_time %></Duration>
<TrackingEvents>
<Tracking event="start">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-start&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="firstQuartile">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-firstQuartile&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="midpoint">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-midpoint&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="thirdQuartile">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-thirdQuartile&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="complete">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-complete&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="mute">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-mute&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="unmute">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-unmute&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="pause">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-pause&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="resume">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-resume&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="fullscreen">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-fullscreen&impression_id=<%= @impression_id %>]]>
</Tracking>
<% if @skippable == true %>
<Tracking event="skip">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-skip&impression_id=<%= @impression_id %>]]>
</Tracking>
<% end %>
<Tracking event="progress"  offset="00:00:10">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-progress&impression_id=<%= @impression_id %>]]>
</Tracking>
</TrackingEvents>
<VideoClicks>
<ClickThrough>
<![CDATA[<%= @video_click_url %>]]>
</ClickThrough>
</VideoClicks>
<MediaFiles>
<MediaFile delivery="progressive" bitrate="256" width="480" height="352" type="video/x-flv">
<![CDATA[<%= configatron.root_image_path %>static/video_ads/<%= @ad_video_detail.flv %>]]>
</MediaFile>
<MediaFile delivery="progressive" bitrate="256" width="640" height="360" type="video/x-ms-wmv">
<![CDATA[<%= configatron.root_image_path %>static/video_ads/<%= @ad_video_detail.wmv %>]]>
</MediaFile>
<MediaFile delivery="progressive" bitrate="400" width="320" height="180" type="video/webm">
<![CDATA[<%= configatron.root_image_path %>static/video_ads/<%= @ad_video_detail.webm %>]]>
</MediaFile>
<%# Temporary adding mp4 support %>
<MediaFile delivery="progressive" bitrate="400" width="320" height="180" type="video/mp4">
<![CDATA[<%= configatron.root_image_path %>static/video_ads/amazon4.mp4]]>
</MediaFile>
</MediaFiles>
</Linear>
</Creative>
<% end %>

<% if !@ad_video_detail.non_linear_click_url.blank? %>
<Creative sequence="1" AdID="">
<NonLinearAds>
<TrackingEvents>
<Tracking event="creativeView">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=non_linear-impression&impression_id=<%= @impression_id %>]]>
</Tracking>
</TrackingEvents>
<NonLinear id="1" width="480" height="90" scalable="false" maintainAspectRatio="false">
<StaticResource creativeType="image/jpeg">
<![CDATA[<%= configatron.root_image_path %>static/video_ads/<%= @ad_video_detail.non_linear_img_url %>]]>
</StaticResource>
<NonLinearClickThrough>
<![CDATA[<%= @ad_video_detail.non_linear_click_url %>]]>
</NonLinearClickThrough>
<AdParameters/>
</NonLinear>
</NonLinearAds>
</Creative>
<% end %>

<% if @show_companion == "true" && !@ad_video_detail.companion_type.blank? %>
<Creative sequence="1" id="331">
<CompanionAds>

<% if @ad_video_detail.companion_type == "static" %>
<Companion width="<%= @width %>" height="<%= @height %>">
<% if @ad_video_detail.companion_img_url.to_s.include?(".swf") %>
   <StaticResource creativeType="application/x-shockwave-flash">
<% else %>
   <StaticResource creativeType="image/jpeg">
<% end %>
<![CDATA[<%= configatron.root_image_path %>static/video_ads/<%= @ad_video_detail.companion_img_url %>]]>
</StaticResource>
<TrackingEvents>
<Tracking event="creativeView">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=static-companion-impression&impression_id=<%= @impression_id %>]]>
</Tracking>
</TrackingEvents>
<CompanionClickThrough>
<![CDATA[<%= configatron.hostname + history_details_path(:ads_id => @advertisement.id, :iid => @impression_id, :red_url => @ad_video_detail.companion_click_url) %>]]>
</CompanionClickThrough>
</Companion>

<% elsif @ad_video_detail.companion_type == "dynamic" %>

<Companion width="<%= @width %>" height="<%= @height %>" id="331">
<IFrameResource>
<![CDATA[<%= @companion_dynamic_url %>]]>
</IFrameResource>
<TrackingEvents>
<Tracking event="creativeView">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=companion-impression&impression_id=<%= @impression_id %>]]>
</Tracking>
</TrackingEvents>
</Companion>

<% end %>

</CompanionAds>
</Creative>
<% end %>

</Creatives>

<% if @skippable == true %>
<Extensions>
<Extension type="DFP">
<SkippableAdType>Generic</SkippableAdType>
<CustomTracking>
<Tracking event="skip">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-skip&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="skipShown">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-skip-shown&impression_id=<%= @impression_id %>]]>
</Tracking>
<Tracking event="engagedView">
<![CDATA[<%= configatron.hostname %>/advertisements/video_ad_tracking?metric=linear-engaged_view&impression_id=<%= @impression_id %>]]>
</Tracking>
</CustomTracking>
</Extension>
</Extensions>
<% end %>

</InLine>
</Ad>
</VAST>