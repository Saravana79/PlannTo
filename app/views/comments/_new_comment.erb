<div class="new_comment_form_wrapper">
  <%= form_for @comment, :remote => true do |f|  %>
    <%= hidden_field_tag :parent, parent %>
    <%= hidden_field_tag :parent_id,parent_id %>
    <div style="margin-bottom: 5px;">
      <%= f.text_area :comment,:rows=>"2", :class=>"comment_box" %>
    </div>
    <div class="submit_button">
      <%= f.submit :value => "Comment", :id => "comment_submit_3", 'data-disable-with'=>"Commenting...", :class=>"comment_submit button creation" %>
    </div>
  <% end %>
</div>
