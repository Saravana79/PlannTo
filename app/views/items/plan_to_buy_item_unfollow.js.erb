Product.show_notice('<%= escape_javascript(flash[:notice]) %>');
<% if @type == "buy" %>
  Product.hover_follow_but($("#plan_to_buy"),"Plan to buy", "Plan to buy")
  Product.hover_follow_but($("#plan_to_follow"),"Follow This Car", "Follow This Car")
  Product.unload_buyer("", '<%=I18n.t('plan_to_buy') %>', '<%= I18n.t('plan_to_follow') %>');
<% elsif @type == "own" %>
  Product.unload_owner("", '<%= I18n.t('plan_to_own') %>', '<%= I18n.t('plan_to_follow') %>');
  $("#plan_to_buy").unbind("hover")
  Product.hover_follow_but($("#plan_to_own"),"I Own it", "I Own it")
  Product.hover_follow_but($("#plan_to_follow"),"Follow This Car", "Follow This Car")
<% elsif @type == "follow" %>
  Product.unload_follow("", '<%= I18n.t('plan_to_follow') %>');
  $("#plan_to_own").unbind("hover")
  $("#plan_to_buy").unbind("hover")
  Product.hover_follow_but($("#plan_to_follow"),"Follow This Car", "Follow This Car", '<%= I18n.t('plan_to_follow') %>')
<% end %>

$(".PlanntoBuyBtn span[title]").tooltip();