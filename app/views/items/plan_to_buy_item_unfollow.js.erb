<% if params[:profile] %>
$("#product_"+'<%= @item.id %>').remove();
<% else %>
<% if @type == "buy" %>
  Product.hover_follow_but($("#plan_to_buy_"+'<%= @item.id %>'),"<%=I18n.t("#{@item.class.superclass}.buy_bnt") %>", "<%=I18n.t("#{@item.class.superclass}.buy_bnt") %>");
  Product.hover_follow_but($("#plan_to_follow_"+'<%= @item.id %>'),"<%=I18n.t("#{@item.class.superclass}.follow_bnt") %>", "<%=I18n.t("#{@item.class.superclass}.follow_bnt") %>");
  Product.unload_buyer('<%= '_'+@item.id.to_s %>', '<%=params[:button_class] %>', '<%=I18n.t("#{@item.class.superclass}.plan_to_buy") %>', '<%= I18n.t("#{@item.class.superclass}.plan_to_follow") %>');
<% elsif @type == "own" %>
  Product.unload_owner('<%= '_'+@item.id.to_s %>', '<%= params[:button_class] %>', '<%= I18n.t("#{@item.class.superclass}.plan_to_own") %>', '<%= I18n.t("#{@item.class.superclass}.plan_to_follow") %>');
  $("#plan_to_buy"+'<%= @item.id %>').unbind("hover");
  Product.hover_follow_but($("#plan_to_own_"+'<%= @item.id %>'),"<%=I18n.t("#{@item.class.superclass}.own_bnt") %>", "<%=I18n.t("#{@item.class.superclass}.own_bnt") %>");
  Product.hover_follow_but($("#plan_to_follow_"+'<%= @item.id %>'),"<%=I18n.t("#{@item.class.superclass}.follow_bnt") %>", "<%=I18n.t("#{@item.class.superclass}.follow_bnt") %>");
<% elsif @type == "follow" %>
  Product.unload_follow('<%= '_'+@item.id.to_s %>', '<%= params[:button_class] %>', '<%= I18n.t("#{@item.class.superclass}.plan_to_follow") %>');
  $("#plan_to_own"+'<%= @item.id %>').unbind("hover");
  $("#plan_to_buy"+'<%= @item.id %>').unbind("hover");
  Product.hover_follow_but($("#plan_to_follow_"+'<%= @item.id %>'),"<%=I18n.t("#{@item.class.superclass}.follow_bnt") %>", "<%=I18n.t("#{@item.class.superclass}.follow_bnt") %>", '<%= I18n.t("#{@item.class.superclass}.plan_to_follow") %>');
<% end %>

$(".PlanntoBuyBtn span[title]").tooltip();

<% end %>