      width: 305px;
  }

  #shareProduct {
      clear: both;
      display: block;
      margin: 35px 0 0 211px;
      padding: 5px 5px 0 0;
  }

  .input-label {
      font-size: 16px !important;
      padding: 9px 0 0;
  }

  .alert-notice .notice {
      background-color: darkseagreen;
      color: green;
      font-size: 15px;
