<%if (@item.is_a? (Product)) && (@related_items.size > 0)%>
  <table width="251" height="38" border="0" cellspacing="0" cellpadding="10px" style="border:solid 1px #cdd3d7;background:white;">
    <tr>
      <td class="bg_widgethdr txt_white">Related <%=@item.type.pluralize%></td>
    </tr>
    <tr>
      <td valign="top">
        <!--<table width="226" border="0" cellspacing="0" cellpadding="0" align="center" id="uisideRelatedProduct">
         </table>-->

        <table width="226" border="0" cellspacing="0" cellpadding="0" align="center">
          <%@related_items.each do |related_item|%>
          <tr>
            <td width="113" height="85"><img src="<%=related_item.image_url%>" width="92" height="69" onclick="parent.location='<%=(related_item.get_url())%>'"/></td>
            <td width="113">
            <div>
            <a href="<%=related_item.get_url()%>" class="txt_black"><%=related_item.name%></a>
           </div>
                 <a class="txt_price"><%= related_item.get_price_info('Price',false) %></a><br />
            <%= render :partial => 'shared/rating',:locals => {:item => related_item, :rating_id => "related_item_id#{related_item.id}"} %><br /><br />
               <a href="/items/compare?ids=<%= @item.id%>,<%= related_item.id %>" style="padding: 2px;margin-top: 10px;" class="btn-link">Compare</a><br /><br />
            </td>
          </tr>
          <tr>
            <td class="dotted_border" colspan="2"  style="width:100%"><%#= render 'shared/follow_buttons',:follow_type => 'Car', :follow_html => '', :button_class => '_small', :item => related_item, :related_items => true %></td>
          </tr>
         <script type="text/javascript">
           <%= render "shared/javascript_button", :formate => :js, :button_class => '_small', :item => related_item,
           :related_follower => user_follow_type(related_item, current_user), :related_items => true %>
           Product.show_login_dialog("#plan_to_buy_<%= related_item.id %>, #plan_to_own_<%= related_item.id %>, #plan_to_follow_<%= related_item.id %>");
         </script>

        <%end%>
        </table>

      </td>
    </tr>
    <tr>
      <td height="33" class="padding1_lft15"><a href="<%=view_all_related_items_url(@item)%>" class="txt_blue">View All</a></td>
    </tr>
  </table>
  <br/>
<%end%>
