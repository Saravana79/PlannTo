            <td height="40" colspan="2" class="dotted_border" valign="top">
              <% related_follower = related_item.related_followers(@follow_type) %>              
              <%- related_follower[0..2].each do |user| %>
                <%= image_tag user.get_photo(:small), :title => user.name ,:class => "userImageSmall"%>
              <% end %>
              <% if ((related_follower.count - 2) > 0) %>
                and <%= (related_follower.count - 2) %> other people owns this.
              <% elsif related_follower.count > 0 %>
                owns this
              <% end %>
            </td>
          </tr>
         <script type="text/javascript">
           <%= render "shared/javascript_button", :formate => :js, :button_class => '_small', :item => related_item,
           :related_follower => user_follow_type(related_item, current_user) %>
         </script>
        <%end%>

        </table>

      </td>
    </tr>
  <tr>
    <td height="33" class="padding1_lft15"><a href="<%=view_all_related_items_url(@item)%>" class="txt_blue">View All</a></td>
  </tr>
  </table>
