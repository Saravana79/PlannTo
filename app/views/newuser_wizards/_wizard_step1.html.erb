<div class="search_block">
    <div class="title_header" style="padding:0px 0px 0px 0px;width:450px;height:25px;">
      <input style="margin-top:5px;width:360px; float:left;font-size:16px;" placeholder="Start typing to select a product." type="text" value="" id="product"/><input style="float:left;margin-top:5px;" class="wizardbutton" type="button"/>
    </div>
   </div>
     <div style="clear:both;"></div>
     <%= render "newuser_wizards/default_images" %>
      <%= hidden_field_tag "invitation_id",@invitation.id rescue "" %>
    <%= f.hidden_field "item_id" %>
    <%= f.hidden_field "type",:value => "owner" %>
    <div  style="float:right;padding:5px;width:220px;">
    
    <%= f.submit 'Next Step',:id => "publishanswer",:class=>"searchButton",:style=>"font-size:15px;" %>
     <p style="margin:10px 0px 0px 5px;font-size:15px;color:gray;"> or <a href="#">skip</a></p>
      <div>
         <%= render "shared/ajax_loader" %>
      </div>
        </div>
 <%end%>
<%= render "newuser_wizards/javascript" %>
</div>
<script>
<%if !@invitation.blank? %>
 <%if @invitation.follow_type == "owner" %> 
  $("#close_<%=@item.id %>").hide();
  <%end%> 
  <%end%>
 $("p a").click(function(e){
   $("#wizard").html("<%= escape_javascript(render  'newuser_wizards/wizard_step2') %> ");
   <%if !@invitation.blank? %>
   <%if @invitation.follow_type == "follower" %>
    $("#img_box_1").html("<%= escape_javascript(render  'newuser_wizards/product') %>");
     $("#close_<%=@item.id %>").hide();
   <%end%>
   <%end%>

 });
</script>
</div>
