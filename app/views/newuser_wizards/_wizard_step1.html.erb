<div class="step_main_page">
<div class="main_step">
<ul>
<li class="selected">Step 1</li>
<li>Step 2</li>
<li>Step 3</li>
</ul>
<div class="clearboth"></div>
</div>
<%= form_for :wizard,:url => newuser_wizards_path,:remote => true,:method => :post do |f| %>

<br/>
<%= render "shared/alert_message",:type => "wizard_step1" %>
<!--
