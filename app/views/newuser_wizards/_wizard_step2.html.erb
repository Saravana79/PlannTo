 <div class="step_main_page">
<div class="main_step">
<ul>
<li >Step 1</li>
<li class="selected">Step 2</li>
<li>Step 3</li>
</ul>
<div class="clearboth"></div>
</div>
<%= form_for :wizard,:url => newuser_wizards_path,:remote => true,:method => :post do |f| %>
<div class="text_box">
<div style="font: bold 11px Tahoma,Arial, Helvetica, sans-serif;">Are you interested in Photography or Cycling? If so, select the interested topics in Photography and cycling to follow. Find the complete list of topics in <a href="/camera/topics" target="_blank">Photography</a> and <a href="/cycle/topics" target="_blank">Cycling</a></div>
</div>
<div class="search_block">
    <div class="title_header" style="padding:0px 500px 0px 0px;width:450px;height:25px;">
        <input style="margin-top:5px;width:360px; float:left;font-size:15px;" placeholder="Start typing to select a topic." type="text" value="" id="product"/><input style="float:left;margin-top:5px;" class="wizardbutton" type="button"/>
    </div>
    </div>
       <div style="clear:both;"></div>
          <%= render "default_images" %>
    <%= f.hidden_field "item_id" %>
    <%= f.hidden_field "type",:value => "follower" %>
   <div class="search_block" style="float:right;padding:70px;">
         <%= f.submit 'Next Step',:id => "publishanswer",:class=>"searchButton",:style=>"font-size:15px;" %>
       <p style="margin:10px 0px 0px 70px;font-size:15px;color:gray;">or <a href="#">skip</a></p>
      
       <div>
         <%= render "shared/ajax_loader" %>
      </div>
        </div>
 <%end%>
<%= render "javascript" %>
</div>
<script>
 $("p a").click(function(e){
   $("#wizard").html("<%= escape_javascript(render  'newuser_wizards/wizard_step3') %> ");
 });
</script>
